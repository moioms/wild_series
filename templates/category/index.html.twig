{% extends 'base.html.twig' %}

{% block title %}All catégories{% endblock %}

{% block body %}

    <h1>Toutes les catégories</h1>

    {% for category in categories %}
        <div>
            <h2>{{loop.index}} / {{category.name}} </h2>
            <a href="{{ path("category_show", {name: category.name }) }}">Voir la catégorie</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}